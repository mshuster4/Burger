    
<div class="container">

    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Pizza Passport</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">

            <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <p>
                        {{this.id}}<span>Pizza Name: </span>{{this.burger_name}} 
                        <button class="devour-button" data-id="{{id}}" data-devoured="{{devoured}}">Devour it!</button>
                    </p>
                </li>
                {{/unless}}
            {{/each}}
            </ul>

        </div>

        <div class="col-sm-6 devoured">
            {{#each burgers}}
                {{#if this.devoured}}
                <l1>
                    <p>{{this.id}}<span class="label">Name of Pizza: </span>{{this.burger_name}}</p>
                </l1>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <form>
        <div class="form row">
            <div class="col-sm-12">
                <input type="text" id="burger" class="form-control" placeholder="">
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-12">
            <button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(function(){

        $(".devour-button").on("click", function(event) {

            var id = $(this).data("id");
            var devoured = $(this).data("devoured");

            console.log(id);
            console.log(devoured);

            var wasDevoured = {
                devoured: 1
            };

            $.ajax("/api/burgers/" + id, {
                type: "PUT",
                data: wasDevoured
            }).then(
                function() {
                    console.log("Yum");
                    location.reload();
                }
            );
        });

        $("#submitButton").on("click", function(event) {
            event.preventDefault();

            var newBurger = {
                burger_name: $("#burger").val().trim(),
                devoured: 0
            };

            console.log(newBurger);

            $.ajax("/api/burgers", {
                type: "POST",
                data: newBurger
            }).then(
                function() {
                    console.log("created new burger");
                    location.reload();
                }
            );
    
        });

    });

</script>


